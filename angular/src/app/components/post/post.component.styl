:host(.lg)
  flex: 1 50%
  &:nth-child(odd)
    .awd-post
      padding-right: 15px
  &:nth-child(even)
    .awd-post
      padding-left: 15px

:host(.md)
  flex: 1 33.3333%
  &:nth-child(3n+1)
    .awd-post
      padding-right: 10px
  &:nth-child(3n+2)
    .awd-post
      padding-left: 5px
      padding-right: 5px
  &:nth-child(3n+3)
    .awd-post
      padding-left: 10px

:host(.sm)
  flex: 1 25%
  &:nth-child(4n+1)
    .awd-post
      padding-right: 15px
  &:nth-child(4n+2)
    .awd-post
      padding-right: 15px
  &:nth-child(4n+3)
    .awd-post
      padding-right: 15px
  &:nth-child(4n+4)
    margin-right: -15px
    .awd-post
      padding-right: 15px

.awd-post
  //border-bottom: 1px solid rgba(32,33,36,0.1)
  padding: 0 0 15px
  &-image
    height: 0
    padding-top: 56.25%
    width: 100%
    margin: 0 auto
    background-size: cover
    background-repeat: no-repeat
    background-position: 50%
  &-title
    width: 100%
    display: block
    position: relative
    border-bottom: 1px solid rgba(32,33,36,0.1)
    &:before
      content: ''
      position: absolute
      left: 0
      bottom: -2px
      height: 0
      width: 30px
      border-bottom: 2px solid rgba(249,37,37,1)
    h4
      margin: 0 0 10px
      font-weight: bold
      color: rgba(32,33,36,1);
      font-size: 18px
  &-category
    h5
      display: inline-block
      a
        background-color: rgba(249,37,37,1)
        color: #fff
        padding: 5px 10px
        font-size: 12px
        &:hover, &:focus
          outline: none
          background-color: rgba(249,37,37,0.6)
  &-text
    p
      font-size: 14px
      height: 100px
      overflow: hidden
      text-overflow: ellipsis
      display: block
  &-content
    height:
  a
    &:hover
        h4
          color: rgba(32,33,36,0.6)

@media (max-width: 1199px)
  .awd-post
    &-text
      p
        height: 120px

@media (max-width: 991px)
  :host(.md)
    flex: 1 33.3333%
    &:nth-child(3n+1)
      .awd-post
        padding-right: 10px
    &:nth-child(3n+2)
      .awd-post
        padding-left: 5px
        padding-right: 5px
    &:nth-child(3n+3)
      .awd-post
        padding-left: 10px

  :host(.sm)
    flex: 1 50%
    &:nth-child(odd)
      .awd-post
        padding-left: 0
        padding-right: 15px
    &:nth-child(even)
      margin: 0 !important
      .awd-post
        padding-left: 15px
        padding-right: 0

  .awd-post
    &-text
      p
        height: 100px

@media (max-width: 767px)
  :host(.lg), :host(.md), :host(.sm)
    flex: 1 100%
    .awd-post
      padding-left: 0 !important
      padding-right: 0 !important

  .awd-post
    &-text
      p
        height: 120px