@import '../../shared/variables'

header
  background-color: $black
  display: flex
  width: 200px
  height: 100%
  padding: 50px 0
  flex-direction: column
  justify-content: flex-start
  align-items: flex-start

.collapse
  display: none

.navbar
  width: 100%
  &-header
    margin-bottom: 50px
  &-brand
    color: $white
    text-align: center
    width: 100%
    display: block
    margin: 0 0 60px
    padding: 0 20px
  &-toggle
    display: none
    position: relative
    float: right
    padding: 9px 10px
    margin-right: 15px
    background-color: transparent
    background-image: none
    border: 1px solid transparent
    border-radius: 4px
    .icon-bar
      display: block
      width: 22px
      height: 2px
      border-radius: 1px
      background-color: $white
      & +.icon-bar
        margin-top: 4px
    &:focus
      outline: none
  &-nav
    padding: 0
    margin: 0
    width: 100%
    &__item
      display: block
      list-style: none
      margin: 0
      position: relative
      padding: 0 30px 0 80px
      a
        color: $white
        font-size: 0.7em
        font-family: $font-main
        font-weight: bold
        line-height: 50px
        text-decoration: none
        &:hover, &:focus
          color: darken($white, 30)
      select
        -webkit-appearance: textfield
        -moz-appearance: textfield
        background-color: transparent
        color: $white
        border: none
        padding: 0
        font-size: 0.7em
        font-family: $font-main
        font-weight: bold
        line-height: 50px
        &:focus
          outline: none
      &--active
        &:before
          content: ''
          width: 3px
          position absolute
          left: 0
          top: 50%
          transform: translateY(-50%)
          height: 30px
          display: block
          background-color: $black
    &__select
      margin-top: 30px
      padding-top: 30px
      border-top: 1px solid rgba(242,242,242, 0.1)

@media(min-width: 768px)
  .navbar-collapse.collapse
    display: block

@media(max-width: 767px)
  header
    width: 100%
    height: auto
    padding: 15px 0

  .navbar
    &-toggle
      display: block
    &-header
      padding: 15px 0
      margin: 0
    &-brand
      width: 200px
      margin-bottom: 0
