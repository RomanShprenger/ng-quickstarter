@import '../../shared/variables'

.awd-about
  padding-top: 300px
  &-header
    position: absolute
    top: 0
    left: 0
    height: 300px
    width: 100%
    margin: 0
    background: url("/assets/images/about.jpg") no-repeat
    background-size: cover
    background-position: 50%
    &__bg
      background-color: rgba(32,33,36,0.3)
      display: block
      height: 100%
      width: 100%
  &-title
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
    &__logo
      background: url("/assets/images/logo.png") no-repeat
      background-size: contain
      background-position: 50%
      display: block
      width: 320px
      height: 100px
      margin: 0 auto
    &__text
      h3
        color: #fff
        text-align: center
  &-content
    padding: 30px 0
    display: flex
    flex-direction: row
    &__text
        flex: 1 0 50%
        position: relative
        button
            position: absolute
            top: 50%
            left: 50%
            transform: translate(-50%, -50%)
  &-footer
    &__title
      h4
        text-align: center
    &__list
      padding-left: 15px
      a
        font-size: 16px
        text-decoration: underline
        &:hover, &:focus
          outline: none
          text-decoration: none

@media(max-width: 767px)
  .awd-about
    padding-top: 250px
    &-title
      &__logo
        width: 260px
        height: 50px
      &__text
        h3
          margin-bottom: 0
